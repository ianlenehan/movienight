<!DOCTYPE html>
<html>
<head>
  <title>Movienight</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>


  <% if @current_user.present? %>
  Hello <%= @current_user.name_first %>
    <% if @current_user.admin? %>
      <%= link_to "All Users", users_path %>
      <%= link_to "All Groups", groups_path %>
      <%= link_to 'All Events', events_path %>
    <% end %>
      <% if @current_user.group_id == nil %>
        <%= link_to "Create Group", new_group_path %>
        <% else %>
        <%= link_to @current_user.group.name, group_path(@current_user.group_id) %>
        <% end %>
    <%= link_to 'Home', root_path %>

    <%= link_to "My Profile", user_path(@current_user) %>
    <%= link_to "Logout #{ @current_user.email }", login_path, :method => :delete %>
  <% else %>
    <%= link_to 'Sign up', signup_path %>
    <%= link_to 'Login', login_path %>
  <% end %>
</nav>



<%= yield %>

</body>
</html>

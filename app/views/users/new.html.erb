<h1>Sign up to Movie Night</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for(@user, :html => {:class=> "rails_form"}) do |f| %>
<p><%= f.label :name_first, 'First name' %>
  <%= f.text_field :name_first, :required => true %></p>

  <p><%= f.label :name_last, 'Last name' %>
  <%= f.text_field :name_last %></p>

  <p><%= f.label :email %>
  <%= f.email_field :email, :required => true %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password, :required => true %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => true %></p>

  <p><%= f.label :image, 'Photo' %>
  <span class="upload"><%= f.file_field :image %></p></span>

  <p><span class="ruby_smallbutton"><%= f.submit "Sign up" %></span>

<% end %>

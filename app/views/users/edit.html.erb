<h1>Edit Profile</h1>

<%= form_for(@user, :html => {:multipart => true, :class => "rails_form"}) do |f| %>
<fieldset>
<%= f.label :email %>
<%= f.email_field :email %>
</fieldset>
<fieldset>
<%= f.label :name_first, "First name" %>
<%= f.text_field :name_first %>
</fieldset>
<fieldset>
<%= f.label :name_last, "Last name" %>
<%= f.text_field :name_last %>
</fieldset>
<fieldset>
<%= f.label :password, "New Password" %>
<%= f.password_field :password %>
</fieldset>
<fieldset>
<%= f.label :password_confirmation, "New Password" %>
<%= f.password_field :password_confirmation %>
</fieldset>
<fieldset>
<%= f.label :image, 'Photo' %>
<span class="upload"><%= f.file_field :image %></span>
</fieldset>
<fieldset>
<span class="ruby_smallbutton"><%= f.submit %></span>
</fieldset>
<% end %>
